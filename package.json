{
  "name": "react-native-training-course",
  "version": "1.0.0",
  "description": "A comprehensive training course for React Native development",
  "main": "index.js",
  "scripts": {
    "validate-module": "node scripts/validate-content.js",
    "validate-all": "for module in docs/module-*; do node scripts/validate-content.js $(basename $module); done",
    "validate:links": "node scripts/validate-links.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "validate:docs": "node scripts/validate-content.js",
    "validate:platform-code": "node scripts/validate-platform-code.js",
    "validate:theme": "node scripts/validate-theme.js",
    "validate": "npm run validate:links && npm run validate:docs && npm run lint && npm run validate:platform-code && npm run validate:theme",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "keywords": [
    "react-native",
    "training",
    "education",
    "mobile",
    "pharmacy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "chalk": "^4.1.2",
    "glob": "^8.1.0"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-jsdoc": "^40.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "node scripts/validate-theme.js",
      "node scripts/validate-platform-code.js"
    ],
    "*.{md,markdown}": [
      "node scripts/validate-links.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/react-native-training-course.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/react-native-training-course/issues"
  },
  "homepage": "https://github.com/yourusername/react-native-training-course#readme"
} 